<%= render 'shared/menu' %>
<div class="ui container">
<p id="notice"><%= notice %></p>

<h1>Products</h1>

 <table class="ui selectable celled table">
    <thead>
    <tr>
      <th>Product name</th>
      <th>Product quantity</th>
      <th>Product price</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_quantity %></td>
        <td>$<%= product.product_price %></td>
        <td><%= link_to 'Show', product, class: 'ui positive basic button' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'ui primary basic button' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui negative basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Product', new_product_path, class: 'ui secondary basic button' %>
<br>
<br>
</div>