<%= render 'shared/menu' %>
<div class="ui container">
<p id="notice"><%= notice %></p>

<h1>Customers</h1>

  <table class="ui selectable celled table">
    <thead>
    <tr>
      <th>Customer name</th>
      <th>Customer address</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_name %></td>
        <td><%= customer.customer_address %></td>
        <td class="center aligned"><%= link_to 'Show', customer, class: 'ui positive basic button' %></td>
        <td class="center aligned"><%= link_to 'Edit', edit_customer_path(customer), class: 'ui primary basic button'  %></td>
        <td class="center aligned"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui negative basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Customer', new_customer_path, class: 'ui secondary basic button' %>
  <br>
  <br>
</div>