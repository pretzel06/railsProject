<%= render 'shared/menu' %>
<div class="ui container">
<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table class="ui selectable celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Total cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.name %></td>
        <td><%= transaction.quantity %></td>
        <td>$<%= transaction.total_cost %></td>
        <td class="center aligned"><%= link_to 'Show', transaction, class: 'ui positive basic button' %></td>
        <td class="center aligned"><%= link_to 'Edit', edit_transaction_path(transaction), class: 'ui primary basic button' %></td>
        <td class="center aligned"><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: 'ui negative basic button' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Transaction', new_transaction_path, class: 'ui secondary basic button' %>
<br>
<br>
</div>